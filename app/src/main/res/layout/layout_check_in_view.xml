<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/check_in_point_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/check_in_img_point_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@mipmap/ic_coins_uncheckin"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/check_in_img_point_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@mipmap/ic_coins_checked_in"
                android:visibility="visible" />

            <TextView
                android:id="@+id/check_in_tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="+5"
                android:textColor="@color/check_in_checked"
                android:textSize="10sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/check_in_img_sliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_checkin_silver_crown"
                android:visibility="visible" />

        </FrameLayout>

        <TextView
            android:id="@+id/check_in_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/check_in_point_frame"
            android:layout_centerHorizontal="true"
            android:text="第1天"
            android:textSize="8sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/check_in_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/bg_un_check_line"
        />
</merge>