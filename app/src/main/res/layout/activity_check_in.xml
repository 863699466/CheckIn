            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="-32dp">

                <com.bear.chickinview.CheckInView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:day="第28天"
                    app:show_crown="true"
                    app:show_day="true">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </com.bear.chickinview.CheckInView>

                <com.bear.chickinview.CheckInView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:show_line="false">

                </com.bear.chickinview.CheckInView>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-32dp"
                android:src="@mipmap/pic_left_line_uncheckin"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="-32dp">

                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:day="第30天"
                    app:show_crown="true"
                    app:show_day="true">

                </com.bear.chickinview.CheckInView>

                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:day="第31天"
                    app:show_line="false"
                    app:show_crown="true"
                    app:show_day="true">

                </com.bear.chickinview.CheckInView>


                <!-- 余下View作为占位符，用于与其它天数对齐-->
                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                </com.bear.chickinview.CheckInView>


                <com.bear.chickinview.CheckInView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    app:show_line="false">

                </com.bear.chickinview.CheckInView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
